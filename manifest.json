{
    "name": "HiFiber",
    "description": "A handy tool that dynamically visualizes the React Fiber tree on any React app",
    "version": "1.0",
    "minimum_chrome_version": "10.0",
    "manifest_version": 3, 
    "devtools_page": "./devtools/devtools.html",
    "background": {
        "service_worker": "./devtools/background.js"
      },
    "content_scripts": [
        {
        "matches": ["http://*/*"],
        "js": ["./devtools/contentscript.js"],
        "css": ["src/styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["./src/script.js"],
            "matches": ["http://*/*"],
            "run_at": "document_idle"
        }
    ],
    "permissions": ["storage", "activeTab", "scripting", "tabs"], 
    "host_permissions": ["<all_urls>"],
    
    "action": {
        "default_popup": "popup.html", 
        "default_icon": {
            "16": "/assets/images/hifiber_16.png",
            "32": "/assets/images/hifiber_32.png",
            "48": "/assets/images/hifiber_48.png",
            "128": "/assets/images/hifiber_128.png"
      }
    }, 
    "icons": {
        "16": "/assets/images/hifiber_16.png",
        "32": "/assets/images/hifiber_32.png",
        "48": "/assets/images/hifiber_48.png",
        "128": "/assets/images/hifiber_128.png"
      }
  }